# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,svelte}]
indent_style = space
indent_size = 2

[*.{yml,html,htm,css,scss}]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2
